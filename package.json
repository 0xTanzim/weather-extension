{
  "name": "weather-extension-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "extension:build": "turbo run build --filter=extension",
    "extension:dev": "turbo run dev --filter=extension",
    "backend:build": "turbo run build --filter=backend",
    "backend:dev": "turbo run dev --filter=backend"
  },
  "devDependencies": {
    "@turbo/gen": "^1.12.4",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=18.0.0"
  }
} 