{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "name": "Weather Extension - Real-time Weather Updates",
  "description": "Get real-time weather information for any city with a beautiful, modern interface.",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Weather Extension",
    "default_icon": "icon.png"
  },
  "permissions": ["storage", "contextMenus", "alarms", "scripting", "geolocation", "activeTab"],

  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },

  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "author": "Tanzim",
  "homepage_url": "https://github.com/0xTanzim/weather-extension"
}
