{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["ES2016", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/v2/**/*",
    "src/background/**/*",
    "src/contentScript/**/*",
    "src/options/**/*",
    "src/utils/**/*",
    "src/types/**/*",
    "src/static/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/v1/**/*"
  ]
}
